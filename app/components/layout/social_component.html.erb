<div class="social custom-social-group">
  <ul>
    <% sites.each do |name, url| %>
      <li class= "social-button-<%= name %>-wrapper">
        <div class="button-social social-button-<%= name %>" id="social-button-<%= name %>">
           <%= link_to "#{url}/#{setting["#{name}_handle"]}", target: "_blank", title: link_title(name) do %>
           <span class="show-for-sr"><%= link_text(name) %></span>
          <span class="icon-<%= name %>" aria-hidden="true"></span>

        <% end %>
        </div>
        </a>
      </li>
    <% end %>
    <%= raw footer_content_block %>
  </ul>
</div>
<script>
$(document).ready(() => {
  $('.button-social').click((e) => {
  if(e.target.id === 'social-button-telegram'){
    $(`#${e.target.id}`).find('a').attr('href', 'https://line.me/ti/p/%40moveforward').attr('title', 'ไปที่ MFP Policy Line (link opens in new window)')
  }
  window.open($(`#${e.target.id}`).find('a').attr('href'), '_black');
  });
})
</script>
